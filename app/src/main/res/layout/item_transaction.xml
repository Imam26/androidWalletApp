<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:visibility="visible"
        android:id="@+id/transactTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintBottom_toTopOf="@id/iconIv"
        app:layout_constraintStart_toStartOf="@id/iconIv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="12dp"
        android:textAppearance="@style/description"
        android:text="Yesterday"/>


    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="@dimen/ic_account_size"
        android:layout_height="@dimen/ic_account_size"
        app:layout_constraintTop_toBottomOf="@id/transactTimeTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iconIv"
        app:layout_constraintTop_toTopOf="@id/iconIv"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/descriptionTv"
        android:textAppearance="@style/title"
        android:text="Cafe, restaurant"/>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nameTv"
        app:layout_constraintTop_toBottomOf="@id/nameTv"
        app:layout_constraintBottom_toBottomOf="@id/iconIv"
        android:textAppearance="@style/description"
        android:text="PriorBank DK1214"/>

    <TextView
        android:id="@+id/incomeExpenseSumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iconIv"
        app:layout_constraintBottom_toBottomOf="@id/iconIv"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/title"
        android:text="-32.23"/>

</androidx.constraintlayout.widget.ConstraintLayout>